@{
    ViewData["Title"] = "IssueTracker - Support Issue Management System";
}

<div class="container py-5">
    <header class="d-flex justify-content-between align-items-center mb-5">
        <div class="d-flex align-items-center">
            <div class="rounded-circle bg-primary d-flex justify-content-center align-items-center me-2" style="width:32px;height:32px;">
                <span class="text-white fw-bold">IT</span>
            </div>
            <span class="fw-bold fs-5">IssueTracker</span>
        </div>
        <div>
            <a href="#" class="btn btn-link me-2">Login</a>
            <a href="#" class="btn btn-primary">Get Started</a>
        </div>
    </header>

    <main class="text-center mb-5">
        <h1 class="display-4 fw-bold">Manage Support<br />Issues with Ease</h1>
        <p class="lead text-muted mt-3">
            A powerful issue tracking system designed for modern teams.
            Submit, track, and resolve support issues efficiently.
        </p>
        <div class="mt-4">
            <a href="#" class="btn btn-primary btn-lg me-2">Start Tracking</a>
            <a href="#" class="btn btn-outline-secondary btn-lg">View Demo</a>
        </div>
    </main>

    <section class="row g-4">
        <div class="col-md-4">
            <div class="border rounded-3 p-4 h-100">
                <h5>For Customers</h5>
                <p class="text-muted mb-0">
                    Submit and track your support issues. Get real-time updates on resolution progress.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border rounded-3 p-4 h-100">
                <h5>For Engineers</h5>
                <p class="text-muted mb-0">
                    Manage and resolve issues efficiently. Assign, update status, and collaborate with your team.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border rounded-3 p-4 h-100">
                <h5>For Admins</h5>
                <p class="text-muted mb-0">
                    Full control over users, roles, and system configuration. Monitor all activities.
                </p>
            </div>
        </div>
    </section>
</div>
