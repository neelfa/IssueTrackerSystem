@{
    ViewData["Title"] = "IssueTracker - Support Issue Management System";
}

<!-- HERO SECTION -->
<div class="bg-gradient-to-r position-relative overflow-hidden" style="background:linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);min-height:80vh;">
    <div class="position-absolute top-0 end-0 opacity-25" style="width:400px;height:400px;border-radius:50%;background:var(--gradient-primary);transform:translate(25%, -25%);"></div>
    <div class="position-absolute bottom-0 start-0 opacity-10" style="width:300px;height:300px;border-radius:50%;background:var(--gradient-primary);transform:translate(-25%, 25%);"></div>
    
    <div class="container position-relative py-5 d-flex align-items-center" style="min-height:80vh;">
        <div class="row align-items-center w-100">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <main class="text-center text-lg-start fade-in">
                    <div class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill mb-4 d-inline-block">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                            <polyline points="22,12 18,12 15,21 9,3 6,12 2,12"></polyline>
                        </svg>
                        Streamlined Issue Tracking
                    </div>
                    
                    <h1 class="display-3 fw-bold mb-4 lh-1">
                        Manage Support<br />
                        <span class="position-relative">
                            Issues with Ease
                            <svg class="position-absolute bottom-0 start-0 w-100 text-primary opacity-50" style="height:12px;" viewBox="0 0 100 12" fill="none">
                                <path d="M0 8C20 4 40 0 60 2C80 4 90 6 100 8" stroke="currentColor" stroke-width="2" fill="none"/>
                            </svg>
                        </span>
                    </h1>
                    
                    <p class="lead text-muted mb-5" style="font-size:1.25rem;line-height:1.6;">
                        A powerful issue tracking system designed for modern teams.
                        Submit, track, and resolve support issues efficiently with real-time collaboration.
                    </p>
                    
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-lg-start">
                        <a href="#features" class="btn btn-primary btn-lg px-4 py-3 d-flex align-items-center justify-content-center">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polygon points="10,8 16,12 10,16 10,8"></polygon>
                            </svg>
                            Start Tracking
                        </a>
                        <a href="#demo" class="btn btn-outline-secondary btn-lg px-4 py-3 d-flex align-items-center justify-content-center">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                            </svg>
                            View Demo
                        </a>
                    </div>
                    
                    <!-- Stats Preview -->
                    <div class="row mt-5 text-center text-lg-start">
                        <div class="col-4">
                            <div class="fw-bold text-primary fs-4">500+</div>
                            <div class="small text-muted">Issues Resolved</div>
                        </div>
                        <div class="col-4">
                            <div class="fw-bold text-primary fs-4">50+</div>
                            <div class="small text-muted">Active Teams</div>
                        </div>
                        <div class="col-4">
                            <div class="fw-bold text-primary fs-4">24/7</div>
                            <div class="small text-muted">Support</div>
                        </div>
                    </div>
                </main>
            </div>
            
            <div class="col-lg-6">
                <div class="position-relative slide-up">
                    <!-- Dashboard Preview Card -->
                    <div class="card border-0 shadow-lg" style="transform:rotate(3deg);">
                        <div class="card-header bg-primary text-white d-flex align-items-center gap-2 py-3">
                            <div class="rounded-circle bg-white bg-opacity-25" style="width:10px;height:10px;"></div>
                            <div class="rounded-circle bg-white bg-opacity-25" style="width:10px;height:10px;"></div>
                            <div class="rounded-circle bg-white bg-opacity-25" style="width:10px;height:10px;"></div>
                            <span class="ms-auto fw-semibold">Issue Dashboard</span>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3 mb-4">
                                <div class="col-6">
                                    <div class="card border border-success bg-success bg-opacity-10">
                                        <div class="card-body p-3 text-center">
                                            <div class="fw-bold text-success fs-5">24</div>
                                            <div class="small text-success">Resolved</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card border border-warning bg-warning bg-opacity-10">
                                        <div class="card-body p-3 text-center">
                                            <div class="fw-bold text-warning fs-5">8</div>
                                            <div class="small text-warning">In Progress</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center gap-2 p-2 border rounded mb-2">
                                <div class="badge bg-danger-subtle text-danger">High</div>
                                <span class="fw-medium flex-grow-1">Login Issues</span>
                                <span class="badge bg-warning text-dark">In Progress</span>
                            </div>
                            
                            <div class="d-flex align-items-center gap-2 p-2 border rounded opacity-75">
                                <div class="badge bg-warning-subtle text-warning">Medium</div>
                                <span class="fw-medium flex-grow-1">UI Bug Report</span>
                                <span class="badge bg-success text-white">Resolved</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FEATURES SECTION -->
<section id="features" class="py-5 bg-white">
    <div class="container py-4">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">Built for Every Role</h2>
            <p class="lead text-muted">Powerful features designed to streamline your workflow</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                         style="width:60px;height:60px;background:var(--primary-light);color:var(--primary-color);">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <h5 class="fw-semibold mb-3">For Customers</h5>
                    <p class="text-muted mb-4">
                        Submit and track your support issues with ease. Get real-time updates on resolution progress and communicate directly with support engineers.
                    </p>
                    <div class="d-flex flex-wrap gap-2 justify-content-center">
                        <span class="badge bg-light text-primary border">Issue Submission</span>
                        <span class="badge bg-light text-primary border">Real-time Tracking</span>
                        <span class="badge bg-light text-primary border">Status Updates</span>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                         style="width:60px;height:60px;background:#28a74520;color:var(--success-color);">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 12l2 2 4-4"></path>
                            <path d="M21 12c.552 0 1-.448 1-1V5c0-.552-.448-1-1-1H3c-.552 0-1 .448-1 1v6c0 .552.448 1 1 1h9l4 4V12z"></path>
                        </svg>
                    </div>
                    <h5 class="fw-semibold mb-3">For Engineers</h5>
                    <p class="text-muted mb-4">
                        Manage and resolve issues efficiently with powerful tools. Assign priorities, update statuses, and collaborate seamlessly with your team.
                    </p>
                    <div class="d-flex flex-wrap gap-2 justify-content-center">
                        <span class="badge bg-light text-success border">Issue Assignment</span>
                        <span class="badge bg-light text-success border">Priority Management</span>
                        <span class="badge bg-light text-success border">Team Collaboration</span>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mx-auto">
                <div class="feature-card text-center">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                         style="width:60px;height:60px;background:#dc354520;color:var(--danger-color);">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                        </svg>
                    </div>
                    <h5 class="fw-semibold mb-3">For Admins</h5>
                    <p class="text-muted mb-4">
                        Complete control over users, roles, and system configuration. Monitor all activities with comprehensive analytics and reporting.
                    </p>
                    <div class="d-flex flex-wrap gap-2 justify-content-center">
                        <span class="badge bg-light text-danger border">User Management</span>
                        <span class="badge bg-light text-danger border">Analytics</span>
                        <span class="badge bg-light text-danger border">System Control</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA SECTION -->
<section class="py-5" style="background:var(--gradient-light);">
    <div class="container py-4 text-center">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="fw-bold mb-3">Ready to Transform Your Support Process?</h2>
                <p class="lead text-muted mb-4">
                    Join thousands of teams who have streamlined their issue tracking with IssueTracker.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <a asp-controller="Account" asp-action="Register" 
                       class="btn btn-primary btn-lg px-5 py-3">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <line x1="19" y1="8" x2="19" y2="14"></line>
                            <line x1="22" y1="11" x2="16" y2="11"></line>
                        </svg>
                        Get Started Free
                    </a>
                    <a asp-controller="Account" asp-action="Login" 
                       class="btn btn-outline-primary btn-lg px-5 py-3">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                            <polyline points="10,17 15,12 10,7"></polyline>
                            <line x1="15" y1="12" x2="3" y2="12"></line>
                        </svg>
                        Sign In
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
