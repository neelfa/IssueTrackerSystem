@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center bg-light" style="min-height:100vh;">
    <div class="w-100" style="max-width: 420px;">
        <div class="mb-4 text-center">
            <a asp-controller="Home" asp-action="Index"
               class="d-inline-flex align-items-center text-decoration-none gap-2">
                <div class="d-flex align-items-center justify-content-center rounded bg-primary text-white fw-bold"
                     style="width:40px;height:40px;">
                    IT
                </div>
                <span class="fs-3 fw-semibold text-dark">IssueTracker</span>
            </a>
            <h1 class="mt-3 fs-3 fw-bold">Welcome back</h1>
            <p class="mt-1 text-muted">Sign in to your account to continue</p>
        </div>

        <div class="border rounded bg-white p-4">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" name="email" type="email"
                           class="form-control" placeholder="name@example.com" required />
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <label for="password" class="form-label">Password</label>
                        <a href="#" class="small text-primary text-decoration-underline">
                            Forgot password?
                        </a>
                    </div>
                    <input id="password" name="password" type="password"
                           class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Sign in
                </button>
            </form>

            <div class="mt-3 text-center small">
                <span class="text-muted">Don't have an account? </span>
                <a asp-controller="Account" asp-action="Register"
                   class="text-primary text-decoration-underline">
                    Create account
                </a>
            </div>
        </div>

        <div class="mt-3 text-center small">
            <a href="#" class="text-primary text-decoration-underline">
                View demo dashboards →
            </a>
        </div>
    </div>
</div>
