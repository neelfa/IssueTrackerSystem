<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="theme-color" content="#0066cc" />
    <title>@ViewData["Title"] - IssueTracker</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IssueTracker.styles.css" asp-append-version="true" />
</head>
<body class="@(Context.Session.GetString("UserEmail") != null ? "authenticated-layout" : "")">
    @if (Context.Session.GetString("UserEmail") != null)
    {
        <!-- Authenticated Layout with Sidebar -->
        <div class="app-container">
            <!-- Left Sidebar -->
            <nav class="sidebar" id="sidebar">
                <div class="sidebar-header">
                    <a asp-controller="Home" asp-action="Index" class="sidebar-brand">
                        <div class="d-flex align-items-center gap-2">
                            <div class="brand-icon">
                                <span>IT</span>
                            </div>
                            <span class="brand-text">IssueTracker</span>
                        </div>
                    </a>
                </div>
                
                <div class="sidebar-content">
                    @{
                        var userRole = Context.Session.GetString("UserRole");
                    }
                    
                    @if (userRole == "Customer")
                    {
                        <div class="nav-section">
                            <div class="nav-section-title">Issues</div>
                            <a asp-controller="CustomerIssues" asp-action="Index" class="nav-link">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                    <polyline points="14,2 14,8 20,8"></polyline>
                                </svg>
                                My Issues
                            </a>
                            <a asp-controller="CustomerIssues" asp-action="Create" class="nav-link">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <line x1="12" y1="8" x2="12" y2="16"></line>
                                    <line x1="8" y1="12" x2="16" y2="12"></line>
                                </svg>
                                Create Issue
                            </a>
                        </div>
                    }
                    else if (userRole == "Engineer")
                    {
                        <div class="nav-section">
                            <div class="nav-section-title">Dashboard</div>
                            <a asp-controller="Engineer" asp-action="Dashboard" class="nav-link">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                </svg>
                                Dashboard
                            </a>
                        </div>
                        <div class="nav-section">
                            <div class="nav-section-title">Issues</div>
                            <a asp-controller="Engineer" asp-action="Index" class="nav-link">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                    <polyline points="14,2 14,8 20,8"></polyline>
                                </svg>
                                All Issues
                            </a>
                            <a asp-controller="Engineer" asp-action="Assigned" class="nav-link">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                </svg>
                                Assigned Issues
                            </a>
                        </div>
                    }
                    else if (userRole == "Admin")
                    {
                        <div class="nav-section">
                            <div class="nav-section-title">Admin</div>
                            <a asp-controller="Admin" asp-action="Dashboard" class="nav-link">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                </svg>
                                Dashboard
                            </a>
                            <a asp-controller="Admin" asp-action="Issues" class="nav-link">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                    <polyline points="14,2 14,8 20,8"></polyline>
                                </svg>
                                All Issues
                            </a>
                            <a asp-controller="Admin" asp-action="Users" class="nav-link">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                Users
                            </a>
                        </div>
                    }
                </div>
            </nav>
            
            <!-- Sidebar Overlay for mobile -->
            <div class="sidebar-overlay" id="sidebarOverlay"></div>
            
            <!-- Main Content Area -->
            <div class="main-content" id="mainContent">
                <!-- Top Header with sidebar toggle -->
                <header class="top-header">
                    <div class="container-fluid">
                        <div class="d-flex justify-content-between align-items-center h-100">
                            <!-- Sidebar Toggle Button -->
                            <button class="btn btn-outline-secondary sidebar-toggle" id="sidebarToggle" type="button" aria-label="Toggle Sidebar">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <line x1="3" y1="6" x2="21" y2="6"></line>
                                    <line x1="3" y1="12" x2="21" y2="12"></line>
                                    <line x1="3" y1="18" x2="21" y2="18"></line>
                                </svg>
                            </button>
                            
                            @{
                                var userEmail = Context.Session.GetString("UserEmail");
                            }
                            
                            <!-- User dropdown -->
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg>
                                    <span>@userRole</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header">@userEmail</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a asp-controller="Account" asp-action="Logout" class="dropdown-item">Logout</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </header>
                
                <!-- Page Content -->
                <main class="page-content">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <!-- Guest Layout (Original Header for non-authenticated users) -->
        <header class="header-modern border-bottom">
            <div class="container-fluid px-3 px-md-4 d-flex align-items-center justify-content-between py-3">
                <!-- Left: Enhanced logo + name -->
                <div class="d-flex align-items-center gap-3">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none d-flex align-items-center gap-2">
                        <div class="d-flex align-items-center justify-content-center rounded-3 text-white fw-bold me-1"
                             style="width:40px;height:40px;background:var(--gradient-primary);box-shadow:var(--shadow-sm);">
                            <span style="font-size:18px;">IT</span>
                        </div>
                        <span class="fs-4 fs-md-3 fw-bold text-dark">IssueTracker</span>
                    </a>
                </div>

                <!-- Right: Enhanced Login + Get Started -->
                <nav class="d-flex align-items-center gap-3">
                    <!-- Mobile Menu Button -->
                    <button class="btn btn-outline-secondary d-sm-none" type="button" 
                            data-bs-toggle="collapse" data-bs-target="#mobileNav" 
                            aria-expanded="false" aria-controls="mobileNav">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="3" y1="6" x2="21" y2="6"></line>
                            <line x1="3" y1="12" x2="21" y2="12"></line>
                            <line x1="3" y1="18" x2="21" y2="18"></line>
                        </svg>
                    </button>
                    
                    <!-- Guest User Menu -->
                    <div class="d-none d-sm-flex align-items-center gap-2">
                        <a class="btn btn-outline-primary px-4"
                           asp-controller="Account"
                           asp-action="Login">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                                <polyline points="10,17 15,12 10,7"></polyline>
                                <line x1="15" y1="12" x2="3" y2="12"></line>
                            </svg>
                            Login
                        </a>
                        <a class="btn btn-primary px-4"
                           asp-controller="Account"
                           asp-action="Register">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <line x1="19" y1="8" x2="19" y2="14"></line>
                                <line x1="22" y1="11" x2="16" y2="11"></line>
                            </svg>
                            Get Started
                        </a>
                    </div>
                </nav>
            </div>
            
            <!-- Mobile Navigation -->
            <div class="collapse d-sm-none border-top" id="mobileNav">
                <div class="container py-3">
                    <div class="d-flex flex-column gap-2">
                        <!-- Mobile guest menu -->
                        <div class="pt-3 mt-2">
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-primary flex-fill"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    Login
                                </a>
                                <a class="btn btn-primary flex-fill"
                                   asp-controller="Account"
                                   asp-action="Register">
                                    Get Started
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="container-fluid px-0">
            <main role="main" class="pb-4" style="width: 100%; max-width: 100vw; overflow-x: hidden;">
                @RenderBody()
            </main>
        </div>
    }

    <!-- ENHANCED FOOTER -->
    <footer class="footer bg-white border-top">
        <div class="container-fluid px-3 px-md-4">
            <div class="row align-items-center py-4 gy-3">
                <div class="col-md-6 text-center text-md-start">
                    <div class="d-flex align-items-center gap-2 mb-2 mb-md-0 justify-content-center justify-content-md-start">
                        <div class="d-flex align-items-center justify-content-center rounded text-white fw-bold"
                             style="width:24px;height:24px;background:var(--primary-color);font-size:12px;">
                            IT
                        </div>
                        <span class="fw-semibold text-dark">IssueTracker</span>
                    </div>
                    <p class="text-muted mb-0 small">
                        &copy; 2025 IssueTracker. Streamlining support issue management.
                    </p>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-center justify-content-md-end gap-3 gap-md-4 flex-wrap">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" 
                           class="text-decoration-none small fw-medium"
                           style="color:var(--secondary-color);transition:var(--transition);">
                            Privacy Policy
                        </a>
                        <a href="#" class="text-decoration-none small fw-medium"
                           style="color:var(--secondary-color);transition:var(--transition);">
                            Terms of Service
                        </a>
                        <a href="#" class="text-decoration-none small fw-medium"
                           style="color:var(--secondary-color);transition:var(--transition);">
                            Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
