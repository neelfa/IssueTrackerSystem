@model IEnumerable<IssueTracker.Models.Issue>

@{
    ViewData["Title"] = "My Issues";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>My Issues</h2>
        <a asp-action="Create" class="btn btn-primary">New Issue</a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in Model)
            {
                <tr>
                    <td>@issue.Title</td>
                    <td>@issue.Priority</td>
                    <td>@issue.Status</td>
                    <td>@issue.CreatedAt.ToLocalTime()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@issue.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-action="Edit" asp-route-id="@issue.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@issue.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
