@model IssueTracker.Models.IssueDetailViewModel

@{
    ViewData["Title"] = "Issue Details";
    var statusClass = Model.Issue.Status.ToLower() switch
    {
        "open" => "status-open",
        "inprogress" => "status-in-progress",
        "resolved" => "status-closed",
        "closed" => "status-closed",
        _ => "status-open"
    };
    
    var priorityClass = Model.Issue.Priority.ToLower() switch
    {
        "high" => "priority-high",
        "medium" => "priority-medium",
        "low" => "priority-low",
        _ => "priority-medium"
    };
}

<div class="container py-4">
    <!-- Issue Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h2 class="fw-bold">@Model.Issue.Title</h2>
            <div class="d-flex gap-2 align-items-center">
                <span class="badge @priorityClass">@Model.Issue.Priority Priority</span>
                <span class="badge @statusClass">@Model.Issue.Status</span>
                <span class="text-muted">Issue #@Model.Issue.Id</span>
            </div>
        </div>
        <div class="d-flex gap-2">
            @if (Model.CanEdit && Model.Issue.Status == "Open")
            {
                <a asp-action="Edit" asp-route-id="@Model.Issue.Id" class="btn btn-outline-primary">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg>
                    Edit
                </a>
            }
            @if (Model.Issue.Status != "Closed")
            {
                <form asp-action="Close" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@Model.Issue.Id" />
                    <button type="submit" class="btn btn-outline-danger" 
                            onclick="return confirm('Are you sure you want to close this issue?')">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                            <path d="M18 6L6 18M6 6l12 12"></path>
                        </svg>
                        Close Issue
                    </button>
                </form>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                    <path d="M19 12H5M12 19l-7-7 7-7"></path>
                </svg>
                Back to Issues
            </a>
        </div>
    </div>

    <!-- Issue Details -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Issue Description</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Issue.Description</p>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Comments (@Model.Comments.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Comments.Any())
                    {
                        foreach (var comment in Model.Comments)
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <strong>@comment.CreatedByEmail</strong>
                                    <small class="text-muted">@comment.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                                </div>
                                <p class="mb-0">@comment.Content</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No comments yet.</p>
                    }

                    <!-- Add Comment Form -->
                    <div class="mt-4">
                        <form asp-action="AddComment" method="post">
                            <input type="hidden" name="issueId" value="@Model.Issue.Id" />
                            <div class="mb-3">
                                <label for="content" class="form-label fw-medium">Add a comment</label>
                                <textarea name="content" id="content" rows="3" class="form-control" 
                                          placeholder="Share additional information or updates..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                    <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
                                </svg>
                                Add Comment
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Issue Metadata -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Issue Information</h6>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        <dt class="small text-muted">Created By</dt>
                        <dd class="mb-3">@Model.Issue.CreatedByEmail</dd>

                        <dt class="small text-muted">Created On</dt>
                        <dd class="mb-3">@Model.Issue.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")</dd>

                        @if (Model.Issue.UpdatedAt.HasValue)
                        {
                            <dt class="small text-muted">Last Updated</dt>
                            <dd class="mb-3">@Model.Issue.UpdatedAt.Value.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Issue.AssignedToEmail))
                        {
                            <dt class="small text-muted">Assigned To</dt>
                            <dd class="mb-0">@Model.Issue.AssignedToEmail</dd>
                        }
                        else
                        {
                            <dt class="small text-muted">Status</dt>
                            <dd class="mb-0 text-warning">Unassigned</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <script>
        alert('@TempData["Error"]');
    </script>
}
