@model IssueTracker.Models.CreateIssueViewModel

@{
    ViewData["Title"] = "Create Issue";
}

<div class="container py-2">
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white py-2">
                <h4 class="card-title mb-0">
                    Create New Issue
                </h4>
            </div>
            <div class="card-body p-3">
                <form asp-action="Create" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-medium">Issue Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Brief description of the issue" required />
                        <div class="invalid-feedback">
                            Please provide a title for the issue.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Priority" class="form-label fw-medium">Priority Level</label>
                        <select asp-for="Priority" class="form-select" required>
                            <option value="">Select priority...</option>
                            <option value="Low">Low</option>
                            <option value="Medium" selected>Medium</option>
                            <option value="High">High</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a priority level.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-medium">Detailed Description</label>
                        <textarea asp-for="Description" rows="4" class="form-control" 
                                  placeholder="Please provide details about the issue, including steps to reproduce..." 
                                  required></textarea>
                        <div class="form-text small">
                            Include steps to reproduce, expected behavior, and actual behavior.
                        </div>
                        <div class="invalid-feedback">
                            Please provide a detailed description of the issue.
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                            </svg>
                            Create Issue
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                <path d="M19 12H5M12 19l-7-7 7-7"></path>
                            </svg>
                            Back to Issues
                        </a>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Form validation
    (function() {
        'use strict';
        window.addEventListener('load', function() {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
