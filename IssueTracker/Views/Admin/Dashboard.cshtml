<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get references to filter elements
        const searchBox = document.getElementById('issueSearchBox');
        const statusFilter = document.getElementById('statusFilter');
        const priorityFilter = document.getElementById('priorityFilter');
        const issueRows = document.querySelectorAll('.issue-row');
        const noResultsDiv = document.getElementById('noResults');
        const resultsCounter = document.getElementById('searchResults');
        const tableBody = issueRows[0]?.closest('tbody');

        // Function to update results counter
        function updateResultsCounter(visibleCount, totalCount) {
            if (visibleCount === totalCount) {
                resultsCounter.textContent = `Showing all ${totalCount} issues`;
            } else if (visibleCount === 0) {
                resultsCounter.textContent = 'No issues found';
            } else {
                resultsCounter.textContent = `Showing ${visibleCount} of ${totalCount} issues`;
            }
        }

        // Function to filter issues
        function filterIssues() {
            const searchTerm = searchBox.value.toLowerCase().trim();
            const selectedStatus = statusFilter.value;
            const selectedPriority = priorityFilter.value;
            
            let visibleCount = 0;
            const totalCount = issueRows.length;

            issueRows.forEach(row => {
                const title = row.getAttribute('data-title') || '';
                const description = row.getAttribute('data-description') || '';
                const id = row.getAttribute('data-id') || '';
                const status = row.getAttribute('data-status') || '';
                const priority = row.getAttribute('data-priority') || '';

                // Check search term (title, description, or ID)
                const matchesSearch = searchTerm === '' ||
                    title.includes(searchTerm) ||
                    description.includes(searchTerm) ||
                    id.includes(searchTerm) ||
                    `#${id}`.includes(searchTerm);

                // Check status filter
                const matchesStatus = selectedStatus === '' || status === selectedStatus;

                // Check priority filter
                const matchesPriority = selectedPriority === '' || priority === selectedPriority;

                // Show/hide row based on all filters
                if (matchesSearch && matchesStatus && matchesPriority) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Update results counter
            updateResultsCounter(visibleCount, totalCount);

            // Show/hide no results message
            if (visibleCount === 0 && (searchTerm !== '' || selectedStatus !== '' || selectedPriority !== '')) {
                noResultsDiv.style.display = 'block';
                if (tableBody) {
                    tableBody.style.display = 'none';
                }
            } else {
                noResultsDiv.style.display = 'none';
                if (tableBody) {
                    tableBody.style.display = '';
                }
            }
        }

        // Clear all filters function
        function clearFilters() {
            searchBox.value = '';
            statusFilter.value = '';
            priorityFilter.value = '';
            filterIssues();
        }

        // Add event listeners with debouncing for search input
        let searchTimeout;
        if (searchBox) {
            searchBox.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(filterIssues, 300); // 300ms delay
            });
        }
        
        if (statusFilter) statusFilter.addEventListener('change', filterIssues);
        if (priorityFilter) priorityFilter.addEventListener('change', filterIssues);

        // Add clear button functionality (optional enhancement)
        searchBox.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                clearFilters();
            }
        });

        // Initialize counter
        updateResultsCounter(issueRows.length, issueRows.length);

        // Highlight search matches (optional enhancement)
        function highlightMatches(element, searchTerm) {
            if (!searchTerm) return;
            
            const walker = document.createTreeWalker(
                element,
                NodeFilter.SHOW_TEXT,
                null,
                false
            );

            const textNodes = [];
            let node;
            while (node = walker.nextNode()) {
                if (node.nodeValue.toLowerCase().includes(searchTerm)) {
                    textNodes.push(node);
                }
            }

            textNodes.forEach(textNode => {
                const parent = textNode.parentNode;
                const text = textNode.nodeValue;
                const regex = new RegExp(`(${searchTerm})`, 'gi');
                const highlightedHTML = text.replace(regex, '<mark class="search-highlight">$1</mark>');
                
                const tempDiv = document.createElement('div');
                tempDiv.innerHTML = highlightedHTML;
                
                while (tempDiv.firstChild) {
                    parent.insertBefore(tempDiv.firstChild, textNode);
                }
                parent.removeChild(textNode);
            });
        }

        // Remove existing highlights
        function removeHighlights() {
            const highlights = document.querySelectorAll('.search-highlight');
            highlights.forEach(highlight => {
                const parent = highlight.parentNode;
                parent.replaceChild(document.createTextNode(highlight.textContent), highlight);
                parent.normalize();
            });
        }
    });
</script>