@model IssueTracker.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4" style="background:#f8fafc;">
<div class="container-fluid py-4 admin-dashboard-container admin-page">
    <!-- Header Section -->
    <div class="container">
        <div class="row align-items-center mb-4">
            <div class="col">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle admin-header-icon"
                         style="width:48px;height:48px;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9,22 9,12 15,12 15,22"></polyline>
                        </svg>
                    </div>
                    <div>
                        <h1 class="mb-0 fw-bold admin-text-blue">Admin Dashboard</h1>
                        <p class="text-muted mb-0">Welcome back! Here's what's happening with your support system.</p>
                    </div>
                </div>
            </div>
            <div class="col-auto">
                <div class="d-flex gap-2">
                    <a asp-action="ExportReport" class="btn btn-outline-primary">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                            <polyline points="7,10 12,15 17,10"></polyline>
                            <line x1="12" y1="15" x2="12" y2="3"></line>
                        </svg>
                        Export Report
                    </a>
                </div>
            </div>
        </div>

        <!-- Issue Statistics Cards -->
        <div class="row g-4 mb-5">
            <div class="col-lg-3 col-md-6">
                <div class="stats-card primary">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h6 class="text-muted mb-1">Total Issues</h6>
                            <h2 class="fw-bold mb-0 admin-text-blue">@Model.TotalIssues</h2>
                        </div>
                        <div class="d-flex align-items-center justify-content-center rounded-circle admin-bg-blue-light"
                             style="width:48px;height:48px;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="admin-icon-blue">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14,2 14,8 20,8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10,9 9,9 8,9"></polyline>
                            </svg>
                        </div>
                    </div>
                    <div class="progress" style="height:4px;">
                        <div class="progress-bar admin-bg-blue" style="width:100%"></div>
                    </div>
                    <small class="text-muted mt-2 d-block">All time issues logged</small>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stats-card info">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h6 class="text-muted mb-1">Open Issues</h6>
                            <h2 class="fw-bold mb-0 admin-text-orange">@Model.OpenIssues</h2>
                        </div>
                        <div class="d-flex align-items-center justify-content-center rounded-circle admin-bg-orange-light"
                             style="width:48px;height:48px;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="admin-icon-orange">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12,6 12,12 16,14"></polyline>
                            </svg>
                        </div>
                    </div>
                    <div class="progress" style="height:4px;">
                        <div class="progress-bar admin-bg-orange" style="width:@((double)Model.OpenIssues / Math.Max(Model.TotalIssues, 1) * 100)%"></div>
                    </div>
                    <small class="text-muted mt-2 d-block">Awaiting attention</small>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stats-card warning">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h6 class="text-muted mb-1">In Progress</h6>
                            <h2 class="fw-bold mb-0 admin-text-red">@Model.InProgressIssues</h2>
                        </div>
                        <div class="d-flex align-items-center justify-content-center rounded-circle admin-bg-red-light"
                             style="width:48px;height:48px;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="admin-icon-red">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="progress" style="height:4px;">
                        <div class="progress-bar admin-bg-red" style="width:@((double)Model.InProgressIssues / Math.Max(Model.TotalIssues, 1) * 100)%"></div>
                    </div>
                    <small class="text-muted mt-2 d-block">Being worked on</small>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stats-card success">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h6 class="text-muted mb-1">Resolved</h6>
                            <h2 class="fw-bold mb-0 admin-text-green">@Model.ClosedIssues</h2>
                        </div>
                        <div class="d-flex align-items-center justify-content-center rounded-circle admin-bg-green-light"
                             style="width:48px;height:48px;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="admin-icon-green">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                <polyline points="22,4 12,14.01 9,11.01"></polyline>
                            </svg>
                        </div>
                    </div>
                    <div class="progress" style="height:4px;">
                        <div class="progress-bar admin-bg-green" style="width:@((double)Model.ClosedIssues / Math.Max(Model.TotalIssues, 1) * 100)%"></div>
                    </div>
                    <small class="text-muted mt-2 d-block">Successfully completed</small>
                </div>
            </div>
        </div>

        <!-- User Statistics -->
        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                        <h5 class="fw-semibold mb-1 admin-text-blue">Users by Role</h5>
                        <p class="text-muted small mb-3">Current system users distribution</p>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="text-center p-3 rounded-3 admin-bg-blue-light">
                                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3 admin-bg-blue"
                                         style="width:56px;height:56px;">
                                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                        </svg>
                                    </div>
                                    <h4 class="fw-bold mb-1 admin-text-blue">@Model.CustomersCount</h4>
                                    <h6 class="text-muted mb-2">Customers</h6>
                                    <div class="progress" style="height:6px;">
                                        <div class="progress-bar admin-bg-blue" style="width:75%"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="text-center p-3 rounded-3 admin-bg-green-light">
                                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3 admin-bg-green"
                                         style="width:56px;height:56px;">
                                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M9 12l2 2 4-4"></path>
                                            <path d="M21 12c.552 0 1-.448 1-1V5c0-.552-.448-1-1-1H3c-.552 0-1 .448-1 1v6c0 .552.448 1 1 1h9l4 4V12z"></path>
                                        </svg>
                                    </div>
                                    <h4 class="fw-bold mb-1 admin-text-green">@Model.EngineersCount</h4>
                                    <h6 class="text-muted mb-2">Engineers</h6>
                                    <div class="progress" style="height:6px;">
                                        <div class="progress-bar admin-bg-green" style="width:45%"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="text-center p-3 rounded-3 admin-bg-red-light">
                                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3 admin-bg-red"
                                         style="width:56px;height:56px;">
                                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                                        </svg>
                                    </div>
                                    <h4 class="fw-bold mb-1 admin-text-red">@Model.AdminsCount</h4>
                                    <h6 class="text-muted mb-2">Admins</h6>
                                    <div class="progress" style="height:6px;">
                                        <div class="progress-bar admin-bg-red" style="width:20%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                        <h5 class="fw-semibold mb-1 admin-text-blue">Quick Actions</h5>
                        <p class="text-muted small mb-3">Manage your system</p>
                    </div>
                    <div class="card-body p-4 quick-actions">
                        <div class="d-grid gap-3">
                            <a asp-controller="Admin" asp-action="Users" class="btn admin-bg-blue">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                Manage Users
                            </a>
                            <a asp-controller="Admin" asp-action="Issues" class="btn admin-bg-green">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                    <polyline points="14,2 14,8 20,8"></polyline>
                                    <line x1="16" y1="13" x2="8" y2="13"></line>
                                    <line x1="16" y1="17" x2="8" y2="17"></line>
                                </svg>
                                View All Issues
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Section - Now positioned above Recent Issues -->
        <div class="row mb-4">
            <div class="col">
                <div class="card border-0 shadow-sm search-filter-card">
                    <div class="card-header bg-transparent border-0 pt-3 px-4 pb-2">
                        <h6 class="fw-semibold mb-0 admin-text-blue">Search & Filter Issues</h6>
                    </div>
                    <div class="card-body py-3">
                        <div class="row align-items-center g-3">
                            <div class="col-lg-6">
                                <div class="position-relative">
                                    <div class="position-absolute top-50 start-0 translate-middle-y ms-3 text-muted">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="11" cy="11" r="8"></circle>
                                            <path d="m21 21-4.35-4.35"></path>
                                        </svg>
                                    </div>
                                    <input type="text" class="form-control ps-5 search-input" id="issueSearchBox" placeholder="Search issues by title, ID, or description..." />
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <select class="form-select filter-select" id="statusFilter">
                                    <option value="">All Statuses</option>
                                    <option value="Open">Open</option>
                                    <option value="InProgress">In Progress</option>
                                    <option value="Resolved">Resolved</option>
                                    <option value="Closed">Closed</option>
                                </select>
                            </div>
                            <div class="col-lg-3">
                                <select class="form-select filter-select" id="priorityFilter">
                                    <option value="">All Priorities</option>
                                    <option value="High">High Priority</option>
                                    <option value="Medium">Medium Priority</option>
                                    <option value="Low">Low Priority</option>
                                </select>
                            </div>
                        </div>
                        <!-- Search Results Counter -->
                        <div class="mt-2">
                            <small class="text-muted" id="searchResults">Showing all issues</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Issues Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="fw-semibold mb-1 admin-text-blue">Recent Issues</h5>
                        <p class="text-muted small mb-0">Latest support tickets in the system</p>
                    </div>
                    <a asp-controller="Admin" asp-action="Issues" class="btn btn-sm admin-bg-blue">
                        View All
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="ms-1">
                            <polyline points="9,18 15,12 9,6"></polyline>
                        </svg>
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="issuesTable">
                        <thead>
                            <tr>
                                <th class="border-0 ps-4">Issue</th>
                                <th class="border-0">Priority</th>
                                <th class="border-0">Status</th>
                                <th class="border-0">Created</th>
                                <th class="border-0 pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentIssues != null && Model.RecentIssues.Any())
                            {
                                foreach (var issue in Model.RecentIssues)
                                {
                                    // Ensure we have valid status and priority values
                                    var status = string.IsNullOrEmpty(issue.Status) ? "Open" : issue.Status;
                                    var priority = string.IsNullOrEmpty(issue.Priority) ? "Medium" : issue.Priority;
                                    
                                    // Determine display text for status
                                    var statusDisplay = status switch
                                    {
                                        "InProgress" => "In Progress",
                                        _ => status
                                    };
                                    
                                    // Determine CSS class for status badge
                                    var statusClass = status.ToLower() switch
                                    {
                                        "open" => "status-open",
                                        "inprogress" => "status-in-progress",
                                        "resolved" => "status-closed",
                                        "closed" => "status-closed",
                                        _ => "status-open"
                                    };
                                    
                                    // Determine CSS class for priority badge
                                    var priorityClass = priority.ToLower() switch
                                    {
                                        "high" => "priority-high",
                                        "medium" => "priority-medium",
                                        "low" => "priority-low",
                                        _ => "priority-medium"
                                    };
                                    
                                    <tr class="issue-row"
                                        data-title="@(issue.Title?.ToLower() ?? "")"
                                        data-description="@(issue.Description?.ToLower() ?? "")"
                                        data-id="@issue.Id"
                                        data-status="@status"
                                        data-priority="@priority">
                                        <td class="ps-4">
                                            <div class="fw-medium text-dark issue-title-text">@(issue.Title ?? "Untitled Issue")</div>
                                            <small class="text-muted issue-id-text">ID: #@issue.Id</small>
                                        </td>
                                        <td>
                                            <span class="badge @priorityClass">
                                                @priority
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @statusClass">
                                                @statusDisplay
                                            </span>
                                        </td>
                                        <td>
                                            <div class="text-muted">@issue.CreatedAt.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">@issue.CreatedAt.ToString("HH:mm")</small>
                                        </td>
                                        <td class="pe-4">
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("Details", "Admin", new { id = issue.Id })" class="btn btn-outline-secondary" title="View Details">
                                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                                        <circle cx="12" cy="12" r="3"></circle>
                                                    </svg>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <!-- Sample data when no issues exist -->
                                <tr class="issue-row" data-title="cannot log in to my account" data-description="login issues with password" data-id="1" data-status="InProgress" data-priority="High">
                                    <td class="ps-4">
                                        <div class="fw-medium text-dark issue-title-text">Cannot log in to my account</div>
                                        <small class="text-muted issue-id-text">ID: #1</small>
                                    </td>
                                    <td>
                                        <span class="badge priority-high">High</span>
                                    </td>
                                    <td>
                                        <span class="badge status-in-progress">In Progress</span>
                                    </td>
                                    <td>
                                        <div class="text-muted">@DateTime.Now.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@DateTime.Now.ToString("HH:mm")</small>
                                    </td>
                                    <td class="pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-secondary" title="View Details">
                                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                                    <circle cx="12" cy="12" r="3"></circle>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="issue-row" data-title="password reset not working" data-description="cannot reset password email not received" data-id="2" data-status="Open" data-priority="Medium">
                                    <td class="ps-4">
                                        <div class="fw-medium text-dark issue-title-text">Password reset not working</div>
                                        <small class="text-muted issue-id-text">ID: #2</small>
                                    </td>
                                    <td>
                                        <span class="badge priority-medium">Medium</span>
                                    </td>
                                    <td>
                                        <span class="badge status-open">Open</span>
                                    </td>
                                    <td>
                                        <div class="text-muted">@DateTime.Now.AddHours(-2).ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@DateTime.Now.AddHours(-2).ToString("HH:mm")</small>
                                    </td>
                                    <td class="pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-secondary" title="View Details">
                                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                                    <circle cx="12" cy="12" r="3"></circle>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="issue-row" data-title="slow loading pages" data-description="website performance issues loading speed" data-id="3" data-status="Open" data-priority="Low">
                                    <td class="ps-4">
                                        <div class="fw-medium text-dark issue-title-text">Slow loading pages</div>
                                        <small class="text-muted issue-id-text">ID: #3</small>
                                    </td>
                                    <td>
                                        <span class="badge priority-low">Low</span>
                                    </td>
                                    <td>
                                        <span class="badge status-open">Open</span>
                                    </td>
                                    <td>
                                        <div class="text-muted">@DateTime.Now.AddHours(-5).ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@DateTime.Now.AddHours(-5).ToString("HH:mm")</small>
                                    </td>
                                    <td class="pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-secondary" title="View Details">
                                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                                    <circle cx="12" cy="12" r="3"></circle>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- No results message -->
                <div id="noResults" class="text-center py-5" style="display: none;">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted mb-3">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                    <h6 class="text-muted">No issues match your search criteria</h6>
                    <p class="text-muted small mb-0">Try adjusting your search terms or filters</p>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    /* Stats Card Styling */
    .stats-card {
        padding: 1.5rem;
        border-radius: 0.5rem;
        background: white;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
        transition: box-shadow 0.2s ease-in-out;
    }

    .stats-card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .progress-bar {
        transition: width 1s ease-in-out;
    }

    .card:hover {
        transition: box-shadow 0.2s ease-in-out;
    }

    .btn-group .btn {
        transition: all 0.2s ease;
    }

    .btn-group .btn:hover {
        transform: scale(1.05);
    }

    .table tbody tr:hover {
        background-color: rgba(0, 102, 204, 0.1);
        transition: all 0.2s ease;
    }

    /* Custom CSS Variables */
    :root {
        --gradient-primary: linear-gradient(135deg, #007bff, #0056b3);
        --primary-light: rgba(0, 123, 255, 0.1);
        --primary-color: #007bff;
        --info-color: #17a2b8;
        --warning-color: #ffc107;
        --success-color: #28a745;
        --danger-color: #dc3545;
        --shadow-lg: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
