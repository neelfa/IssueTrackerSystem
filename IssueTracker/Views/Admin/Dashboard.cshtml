@model IssueTracker.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4 admin-dashboard-container admin-page chart-dashboard">
    <!-- White Header Section -->
    <div class="modern-header-section white-header">
        <div class="container py-4">
            <div class="row align-items-center mb-4">
                <div class="col">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="modern-avatar">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                <polyline points="9,22 9,12 15,12 15,22"></polyline>
                            </svg>
                        </div>
                        <div>
                            <h1 class="mb-0 fw-bold modern-title">Admin Dashboard</h1>
                            <p class="text-muted mb-0">System-wide analytics and management insights</p>
                        </div>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="d-flex gap-2">
                        <a asp-action="ExportReport" class="btn btn-outline-primary">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                <polyline points="7,10 12,15 17,10"></polyline>
                                <line x1="12" y1="15" x2="12" y2="3"></line>
                            </svg>
                            Export Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid px-4">
        <!-- Charts Grid - Professional Layout -->
        <div class="charts-grid mb-4">
            <!-- System Overview Bar Chart -->
            <div class="chart-container metrics-chart-container">
                <div class="chart-header">
                    <h5 class="chart-title">System Overview</h5>
                    <p class="chart-subtitle">Issue distribution and completion metrics</p>
                </div>
                <div class="chart-body">
                    <canvas id="systemOverviewChart"></canvas>
                    <div class="chart-loading" id="systemLoading">Loading system data...</div>
                </div>
            </div>
            
            <!-- User Distribution Pie Chart -->
            <div class="chart-container">
                <div class="chart-header">
                    <h5 class="chart-title">User Distribution</h5>
                    <p class="chart-subtitle">System users by role</p>
                </div>
                <div class="chart-body">
                    <canvas id="userDistributionChart"></canvas>
                    <div class="chart-loading" id="userLoading">Loading users...</div>
                </div>
            </div>
            
            <!-- Priority Analysis -->
            <div class="chart-container">
                <div class="chart-header">
                    <h5 class="chart-title">Priority Analysis</h5>
                    <p class="chart-subtitle">Active issues by priority</p>
                </div>
                <div class="chart-body">
                    <canvas id="priorityAnalysisChart"></canvas>
                    <div class="chart-loading" id="priorityLoading">Loading priorities...</div>
                </div>
            </div>
        </div>

        <!-- Secondary Charts -->
        <div class="row g-4 mb-4">
            <!-- Status Distribution -->
            <div class="col-lg-6">
                <div class="chart-container">
                    <div class="chart-header">
                        <h5 class="chart-title">Issue Status Breakdown</h5>
                        <p class="chart-subtitle">Current status of all issues</p>
                    </div>
                    <div class="chart-body">
                        <canvas id="statusBreakdownChart"></canvas>
                        <div class="chart-loading" id="statusLoading">Loading status data...</div>
                    </div>
                </div>
            </div>
            
            <!-- Activity Trends -->
            <div class="col-lg-6">
                <div class="chart-container">
                    <div class="chart-header">
                        <h5 class="chart-title">Weekly Activity Trend</h5>
                        <p class="chart-subtitle">Issues created vs resolved (7 days)</p>
                    </div>
                    <div class="chart-body">
                        <canvas id="activityTrendChart"></canvas>
                        <div class="chart-loading" id="activityLoading">Loading activity...</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- KPI Summary Cards -->
        <div class="stats-summary mb-4">
            <div class="stat-card">
                <div class="stat-icon primary">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14,2 14,8 20,8"></polyline>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>@Model.TotalIssues</h3>
                    <p>Total Issues</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon warning">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12,6 12,12 16,14"></polyline>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>@Model.OpenIssues</h3>
                    <p>Open Issues</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon info">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>@(Model.CustomersCount + Model.EngineersCount + Model.AdminsCount)</h3>
                    <p>Total Users</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon success">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22,4 12,14.01 9,11.01"></polyline>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>@Model.ClosedIssues</h3>
                    <p>Resolved Issues</p>
                </div>
            </div>
        </div>

        <!-- Recent Issues Table -->
        <div class="row g-4 mb-4">
            <div class="col-12">
                <div class="dashboard-section">
                    <div class="section-header d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="section-title">Recent Issues</h5>
                            <p class="section-subtitle">Latest support tickets in the system</p>
                        </div>
                        <a asp-controller="Admin" asp-action="Issues" class="btn btn-sm btn-primary">
                            View All
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="ms-1">
                                <polyline points="9,18 15,12 9,6"></polyline>
                            </svg>
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="border-0">Issue</th>
                                    <th class="border-0">Priority</th>
                                    <th class="border-0">Status</th>
                                    <th class="border-0">Created</th>
                                    <th class="border-0">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentIssues != null && Model.RecentIssues.Any())
                                {
                                    foreach (var issue in Model.RecentIssues)
                                    {
                                        var status = string.IsNullOrEmpty(issue.Status) ? "Open" : issue.Status;
                                        var priority = string.IsNullOrEmpty(issue.Priority) ? "Medium" : issue.Priority;
                                        
                                        var statusDisplay = status switch
                                        {
                                            "InProgress" => "In Progress",
                                            _ => status
                                        };
                                        
                                        var statusClass = status.ToLower() switch
                                        {
                                            "open" => "status-open",
                                            "inprogress" => "status-in-progress",
                                            "resolved" => "status-closed",
                                            "closed" => "status-closed",
                                            _ => "status-open"
                                        };
                                        
                                        var priorityClass = priority.ToLower() switch
                                        {
                                            "high" => "priority-high",
                                            "medium" => "priority-medium",
                                            "low" => "priority-low",
                                            _ => "priority-medium"
                                        };
                                        
                                        <tr>
                                            <td>
                                                <div class="fw-medium text-dark">@(issue.Title ?? "Untitled Issue")</div>
                                                <small class="text-muted">ID: #@issue.Id</small>
                                            </td>
                                            <td>
                                                <span class="badge @priorityClass">@priority</span>
                                            </td>
                                            <td>
                                                <span class="badge @statusClass">@statusDisplay</span>
                                            </td>
                                            <td>
                                                <div class="text-muted">@issue.CreatedAt.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@issue.CreatedAt.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Admin", new { id = issue.Id })" class="btn btn-sm btn-outline-secondary" title="View Details">
                                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                                        <circle cx="12" cy="12" r="3"></circle>
                                                    </svg>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-4">
                                            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mb-2">
                                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                                <polyline points="14,2 14,8 20,8"></polyline>
                                            </svg>
                                            <div>No recent issues found</div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/css/admin-dashboard.css" rel="stylesheet" />
<link href="~/css/dashboard-charts.css" rel="stylesheet" />

@section Scripts {
    <script src="~/js/dashboard-charts.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize chart system
            const chartManager = new DashboardCharts();
            
            // Hide loading indicators initially
            function hideLoading(chartId) {
                const loading = document.getElementById(chartId + 'Loading');
                if (loading) loading.style.display = 'none';
            }
            
            // Show loading indicators
            function showLoading(chartId) {
                const loading = document.getElementById(chartId + 'Loading');
                if (loading) loading.style.display = 'flex';
            }
            
            // Show all loading indicators
            ['system', 'user', 'priority', 'status', 'activity'].forEach(showLoading);
            
            // Fetch chart data and initialize charts
            fetch('@Url.Action("ChartData", "Admin")')
                .then(response => response.json())
                .then(data => {
                    console.log('Admin chart data loaded:', data);
                    
                    // System Overview Chart
                    chartManager.createSystemOverviewChart('systemOverviewChart', data.metrics);
                    hideLoading('system');
                    
                    // User Distribution Chart  
                    chartManager.createUserDistributionChart('userDistributionChart', data.users);
                    hideLoading('user');
                    
                    // Priority Analysis Chart
                    chartManager.createPriorityChart('priorityAnalysisChart', data.priority);
                    hideLoading('priority');
                    
                    // Status Breakdown Chart
                    chartManager.createStatusBreakdownChart('statusBreakdownChart', data.status);
                    hideLoading('status');
                    
                    // Activity Trend Chart
                    chartManager.createTrendChart('activityTrendChart', data.trend);
                    hideLoading('activity');
                    
                    console.log('All admin charts initialized successfully');
                })
                .catch(error => {
                    console.error('Error loading admin chart data:', error);
                    // Hide loading indicators on error
                    ['system', 'user', 'priority', 'status', 'activity'].forEach(hideLoading);
                });
                
            // Handle window resize for responsive charts
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(() => {
                    Object.values(chartManager.charts).forEach(chart => {
                        if (chart) chart.resize();
                    });
                }, 250);
            });
        });
    </script>
}