@model IssueTracker.Models.IssueDetailViewModel

@{
    ViewData["Title"] = "Issue Details - Admin";
    var statusClass = Model.Issue.Status?.ToLower() switch
    {
        "open" => "status-open",
        "inprogress" => "status-in-progress",
        "resolved" => "status-closed",
        "closed" => "status-closed",
        _ => "status-open"
    };
    
    var priorityClass = Model.Issue.Priority?.ToLower() switch
    {
        "high" => "priority-high",
        "medium" => "priority-medium",
        "low" => "priority-low",
        _ => "priority-medium"
    };
}

<div class="container py-4 admin-page">
    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 rounded-3 d-flex align-items-center gap-2 mb-4">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="flex-shrink-0">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22,4 12,14.01 9,11.01"></polyline>
            </svg>
            <span>@TempData["Success"]</span>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 rounded-3 d-flex align-items-center gap-2 mb-4">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="flex-shrink-0">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="15" y1="9" x2="9" y2="15"></line>
                <line x1="9" y1="9" x2="15" y2="15"></line>
            </svg>
            <span>@TempData["Error"]</span>
        </div>
    }

    <!-- Issue Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start mb-4 gap-3">
        <div class="flex-grow-1">
            <div class="d-flex align-items-center gap-3 mb-3">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle admin-header-icon"
                     style="width:48px;height:48px;">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14,2 14,8 20,8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                    </svg>
                </div>
                <div>
                    <h2 class="fw-bold mb-2 admin-text-blue">@(Model.Issue.Title ?? "Untitled Issue")</h2>
                    <div class="d-flex gap-2 align-items-center flex-wrap">
                        <span class="badge @priorityClass">@(Model.Issue.Priority ?? "Medium") Priority</span>
                        <span class="badge @statusClass">@(Model.Issue.Status ?? "Open")</span>
                        <span class="text-muted">Issue #@Model.Issue.Id</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <a asp-action="Dashboard" class="btn btn-outline-primary btn-sm">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                </svg>
                Dashboard
            </a>
            <a asp-action="Issues" class="btn btn-outline-secondary btn-sm">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                    <path d="M19 12H5M12 19l-7-7 7-7"></path>
                </svg>
                Back to Issues
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Issue Description -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header admin-bg-blue-light">
                    <h5 class="mb-0 admin-text-blue">Issue Description</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@(Model.Issue.Description ?? "No description provided.")</p>
                </div>
            </div>

            <!-- Admin Controls -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header admin-bg-blue-light">
                    <h5 class="mb-0 admin-text-blue">Admin Controls</h5>
                </div>
                <div class="card-body admin-controls">
                    <div class="row g-3">
                        <!-- Status Update -->
                        <div class="col-12 col-md-6">
                            <form asp-action="UpdateStatus" method="post">
                                <input type="hidden" name="id" value="@Model.Issue.Id" />
                                <label class="form-label fw-medium small">Update Status</label>
                                <div class="d-flex gap-2">
                                    <select name="status" class="form-select form-select-sm flex-grow-1">
                                        <option value="Open" selected="@(Model.Issue.Status == "Open")">Open</option>
                                        <option value="InProgress" selected="@(Model.Issue.Status == "InProgress")">In Progress</option>
                                        <option value="Resolved" selected="@(Model.Issue.Status == "Resolved")">Resolved</option>
                                        <option value="Closed" selected="@(Model.Issue.Status == "Closed")">Closed</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary btn-sm px-3">Update</button>
                                </div>
                            </form>
                        </div>

                        <!-- Assignment -->
                        <div class="col-12 col-md-6">
                            @if (Model.CanAssign && Model.Engineers.Any())
                            {
                                <form asp-action="Assign" method="post">
                                    <input type="hidden" name="id" value="@Model.Issue.Id" />
                                    <label class="form-label fw-medium small">Assign Engineer</label>
                                    <div class="d-flex gap-2">
                                        <select name="assignedToEmail" class="form-select form-select-sm flex-grow-1">
                                            <option value="">Unassigned</option>
                                            @foreach (var engineer in Model.Engineers)
                                            {
                                                <option value="@engineer.Email" selected="@(engineer.Email == Model.Issue.AssignedToEmail)">
                                                    @engineer.Email
                                                </option>
                                            }
                                        </select>
                                        <button type="submit" class="btn btn-success btn-sm px-3">Assign</button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <label class="form-label fw-medium small">Assignment</label>
                                <p class="text-muted small mb-0">@(string.IsNullOrEmpty(Model.Issue.AssignedToEmail) ? "Unassigned" : Model.Issue.AssignedToEmail)</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card border-0 shadow-sm comments-section">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 admin-text-blue">Comments & Communication (@Model.Comments.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Comments.Any())
                    {
                        foreach (var comment in Model.Comments)
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <strong class="admin-text-blue">@comment.CreatedByEmail</strong>
                                    <small class="text-muted">@comment.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                                </div>
                                <p class="mb-0">@comment.Content</p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted mb-2">
                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                            </svg>
                            <p class="text-muted">No comments yet. Start the conversation!</p>
                        </div>
                    }

                    <!-- Add Comment Form -->
                    <div class="mt-4">
                        <form asp-action="AddComment" method="post">
                            <input type="hidden" name="issueId" value="@Model.Issue.Id" />
                            <div class="mb-3">
                                <label for="content" class="form-label fw-medium">Add Admin Comment</label>
                                <textarea name="content" id="content" rows="4" class="form-control" 
                                          placeholder="Add administrative notes, status updates, or communicate with the customer and team..." required></textarea>
                                <small class="text-muted">This comment will be visible to all users with access to this issue.</small>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                    <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
                                </svg>
                                Add Comment
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Issue Sidebar -->
        <div class="col-lg-4">
            <!-- Issue Information -->
            <div class="card border-0 shadow-sm mb-4 issue-info-sidebar">
                <div class="card-header admin-bg-blue-light">
                    <h6 class="mb-0 admin-text-blue">Issue Information</h6>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        <dt class="small text-muted">Issue ID</dt>
                        <dd class="mb-3">#@Model.Issue.Id</dd>

                        <dt class="small text-muted">Created By</dt>
                        <dd class="mb-3">
                            <div class="d-flex align-items-center gap-2">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="admin-icon-blue">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                @(Model.Issue.CreatedByEmail ?? "Unknown")
                            </div>
                        </dd>

                        <dt class="small text-muted">Created On</dt>
                        <dd class="mb-3">@Model.Issue.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")</dd>

                        @if (Model.Issue.UpdatedAt.HasValue)
                        {
                            <dt class="small text-muted">Last Updated</dt>
                            <dd class="mb-3">@Model.Issue.UpdatedAt.Value.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")</dd>
                        }

                        <dt class="small text-muted">Current Status</dt>
                        <dd class="mb-3"><span class="badge @statusClass">@(Model.Issue.Status ?? "Open")</span></dd>

                        <dt class="small text-muted">Priority Level</dt>
                        <dd class="mb-3"><span class="badge @priorityClass">@(Model.Issue.Priority ?? "Medium")</span></dd>

                        <dt class="small text-muted">Assigned To</dt>
                        <dd class="mb-0">
                            @if (string.IsNullOrEmpty(Model.Issue.AssignedToEmail))
                            {
                                <span class="admin-text-orange">Unassigned</span>
                            }
                            else
                            {
                                <div class="d-flex align-items-center gap-2">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="admin-icon-green">
                                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="9" cy="7" r="4"></circle>
                                    </svg>
                                    @Model.Issue.AssignedToEmail
                                </div>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/css/admin-dashboard.css" rel="stylesheet" /></style>