@model IEnumerable<IssueTracker.Models.Issue>

@{
    ViewData["Title"] = "My Assigned Issues";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">My Assigned Issues</h2>
            <p class="text-muted">Issues currently assigned to you</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-primary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                </svg>
                All Issues
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Issues Grid -->
        <div class="row g-4">
            @foreach (var issue in Model)
            {
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    @{
                                        var priorityClass = issue.Priority.ToLower() switch
                                        {
                                            "high" => "priority-high",
                                            "medium" => "priority-medium", 
                                            "low" => "priority-low",
                                            _ => "priority-medium"
                                        };
                                    }
                                    <span class="badge @priorityClass">@issue.Priority Priority</span>
                                </div>
                                <div>
                                    @{
                                        var statusClass = issue.Status.ToLower() switch
                                        {
                                            "open" => "status-open",
                                            "inprogress" => "status-in-progress",
                                            "resolved" => "status-closed",
                                            "closed" => "status-closed",
                                            _ => "status-open"
                                        };
                                    }
                                    <span class="badge @statusClass">@issue.Status</span>
                                </div>
                            </div>

                            <h5 class="fw-semibold mb-2">@issue.Title</h5>
                            <p class="text-muted mb-3">
                                @if (issue.Description.Length > 120)
                                {
                                    @(issue.Description.Substring(0, 120) + "...")
                                }
                                else
                                {
                                    @issue.Description
                                }
                            </p>

                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <div class="small text-muted">Created</div>
                                    <div class="fw-semibold">@issue.CreatedAt.ToString("MMM dd")</div>
                                </div>
                                <div class="col-6">
                                    <div class="small text-muted">Customer</div>
                                    <div class="fw-semibold">@issue.CreatedByEmail</div>
                                </div>
                            </div>

                            <div class="d-grid">
                                <a asp-action="Details" asp-route-id="@issue.Id" class="btn btn-outline-primary">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <h5 class="fw-semibold mb-2">No Assigned Issues</h5>
                <p class="text-muted mb-4">You don't have any issues assigned to you at the moment.</p>
                <a asp-action="Index" class="btn btn-primary">
                    View All Issues
                </a>
            </div>
        </div>
    }
</div>