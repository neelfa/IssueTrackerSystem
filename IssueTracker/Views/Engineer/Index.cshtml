@model IEnumerable<IssueTracker.Models.Issue>

@{
    ViewData["Title"] = "All Issues - Engineer Dashboard";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">All Issues</h2>
            <p class="text-muted">Manage and respond to all support issues</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Assigned" class="btn btn-outline-primary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                </svg>
                My Assigned Issues
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Issues Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 ps-4 fw-semibold">Issue Details</th>
                                <th class="border-0 fw-semibold">Priority</th>
                                <th class="border-0 fw-semibold">Status</th>
                                <th class="border-0 fw-semibold">Assigned To</th>
                                <th class="border-0 fw-semibold">Created</th>
                                <th class="border-0 pe-4 fw-semibold">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var issue in Model)
                            {
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div>
                                            <h6 class="fw-semibold mb-1">@issue.Title</h6>
                                            <p class="text-muted small mb-1">Issue #@issue.Id</p>
                                            <p class="text-muted small mb-0">Created by: @issue.CreatedByEmail</p>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        @{
                                            var priorityClass = issue.Priority.ToLower() switch
                                            {
                                                "high" => "priority-high",
                                                "medium" => "priority-medium", 
                                                "low" => "priority-low",
                                                _ => "priority-medium"
                                            };
                                        }
                                        <span class="badge @priorityClass">@issue.Priority</span>
                                    </td>
                                    <td class="py-3">
                                        @{
                                            var statusClass = issue.Status.ToLower() switch
                                            {
                                                "open" => "status-open",
                                                "inprogress" => "status-in-progress",
                                                "resolved" => "status-closed",
                                                "closed" => "status-closed",
                                                _ => "status-open"
                                            };
                                        }
                                        <span class="badge @statusClass">@issue.Status</span>
                                    </td>
                                    <td class="py-3">
                                        @if (string.IsNullOrEmpty(issue.AssignedToEmail))
                                        {
                                            <span class="text-muted">Unassigned</span>
                                        }
                                        else
                                        {
                                            <span>@issue.AssignedToEmail</span>
                                        }
                                    </td>
                                    <td class="py-3">
                                        <div>@issue.CreatedAt.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@issue.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td class="py-3 pe-4">
                                        <div class="d-flex gap-1">
                                            <a asp-action="Details" asp-route-id="@issue.Id" class="btn btn-outline-primary btn-sm">
                                                View
                                            </a>
                                            @if (string.IsNullOrEmpty(issue.AssignedToEmail))
                                            {
                                                <form asp-action="Take" method="post" style="display: inline;">
                                                    <input type="hidden" name="id" value="@issue.Id" />
                                                    <button type="submit" class="btn btn-success btn-sm">Take</button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14,2 14,8 20,8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                    </svg>
                </div>
                <h5 class="fw-semibold mb-2">No Issues Found</h5>
                <p class="text-muted">There are currently no issues in the system.</p>
            </div>
        </div>
    }
</div>