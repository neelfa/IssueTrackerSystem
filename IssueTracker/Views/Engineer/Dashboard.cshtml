@model IssueTracker.Models.EngineerDashboardViewModel

@{
    ViewData["Title"] = "Engineer Dashboard";
    var totalActive = Model.MyAssignedIssues - Model.ResolvedIssues;
    var completionRate = Model.MyAssignedIssues > 0 ? Math.Round((double)Model.ResolvedIssues / Model.MyAssignedIssues * 100, 1) : 0;
}

<div class="modern-engineer-container chart-dashboard">
    <!-- Enhanced Header with Welcome - Now White -->
    <div class="modern-header-section white-header">
        <div class="container py-4">
            <div class="row align-items-center mb-4">
                <div class="col">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="modern-avatar">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            </svg>
                        </div>
                        <div>
                            <h2 class="fw-bold mb-1 modern-title">Engineer Dashboard</h2>
                            <p class="text-muted mb-0">Professional data insights replacing basic cards with interactive charts</p>
                        </div>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="d-flex gap-2">
                        <a asp-action="Assigned" class="btn btn-outline-primary modern-btn">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                            </svg>
                            My Issues
                        </a>
                        <a asp-action="Index" class="btn btn-primary modern-btn-primary">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                <path d="M14 2H6a2 2 0 0 2 2v16a2 2 0 0 2 2h12a2 2 0 0 2-2V8z"></path>
                                <polyline points="14,2 14,8 20,8"></polyline>
                            </svg>
                            All Issues
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid px-4">
        <!-- Charts Grid - Professional Layout -->
        <div class="charts-grid mb-4">
            <!-- Key Metrics Bar Chart -->
            <div class="chart-container metrics-chart-container">
                <div class="chart-header">
                    <h5 class="chart-title">Key Performance Metrics</h5>
                    <p class="chart-subtitle">Overview of workload and performance indicators</p>
                </div>
                <div class="chart-body">
                    <canvas id="metricsChart"></canvas>
                    <div class="chart-loading" id="metricsLoading">Loading metrics...</div>
                </div>
            </div>
            
            <!-- Performance Gauge -->
            <div class="chart-container gauge-chart-container">
                <div class="chart-header">
                    <h5 class="chart-title">Success Rate</h5>
                    <p class="chart-subtitle">Issue completion performance</p>
                </div>
                <div class="chart-body">
                    <canvas id="performanceChart"></canvas>
                    <div class="chart-loading" id="performanceLoading">Loading performance...</div>
                </div>
            </div>
            
            <!-- Priority Donut Chart -->
            <div class="chart-container priority-chart-container">
                <div class="chart-header">
                    <h5 class="chart-title">Priority Distribution</h5>
                    <p class="chart-subtitle">Active issues by priority level</p>
                </div>
                <div class="chart-body">
                    <canvas id="priorityChart"></canvas>
                    <div class="chart-loading" id="priorityLoading">Loading priorities...</div>
                </div>
            </div>
        </div>

        <!-- Secondary Charts -->
        <div class="row g-4 mb-4">
            <!-- Status Distribution -->
            <div class="col-lg-6">
                <div class="chart-container">
                    <div class="chart-header">
                        <h5 class="chart-title">Workload Distribution</h5>
                        <p class="chart-subtitle">Issues by current status</p>
                    </div>
                    <div class="chart-body">
                        <canvas id="statusChart"></canvas>
                        <div class="chart-loading" id="statusLoading">Loading status...</div>
                    </div>
                </div>
            </div>
            
            <!-- Issue Trends -->
            <div class="col-lg-6">
                <div class="chart-container">
                    <div class="chart-header">
                        <h5 class="chart-title">7-Day Activity Trend</h5>
                        <p class="chart-subtitle">Issues created vs resolved over time</p>
                    </div>
                    <div class="chart-body">
                        <canvas id="trendChart"></canvas>
                        <div class="chart-loading" id="trendLoading">Loading trends...</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Stats Cards -->
        <div class="stats-summary mb-4">
            <div class="stat-card">
                <div class="stat-icon primary">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14,2 14,8 20,8"></polyline>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>@Model.TotalIssues</h3>
                    <p>Total Issues in System</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon info">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>@Model.MyAssignedIssues</h3>
                    <p>Assigned to Me</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon warning">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="16"></line>
                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>@Model.InProgressIssues</h3>
                    <p>Currently Active</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon success">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22,4 12,14.01 9,11.01"></polyline>
                    </svg>
                </div>
                <div class="stat-content">
                    <h3>@Model.ResolvedIssues</h3>
                    <p>Successfully Resolved</p>
                </div>
            </div>
        </div>

        <!-- Issues Lists -->
        <div class="row g-4">
            <!-- Recent Assigned Issues -->
            <div class="col-lg-6">
                <div class="dashboard-section">
                    <div class="section-header">
                        <h5 class="section-title">Recent Assignments</h5>
                        <p class="section-subtitle">Your latest assigned issues</p>
                    </div>
                    <div class="recent-issues">
                        @if (Model.RecentAssignedIssues.Any())
                        {
                            @foreach (var issue in Model.RecentAssignedIssues)
                            {
                                var priorityClass = issue.Priority?.ToLower() switch
                                {
                                    "high" => "priority-high",
                                    "medium" => "priority-medium",
                                    "low" => "priority-low",
                                    _ => "priority-medium"
                                };

                                var statusClass = issue.Status?.ToLower() switch
                                {
                                    "open" => "status-open",
                                    "inprogress" => "status-in-progress",
                                    "resolved" => "status-closed",
                                    "closed" => "status-closed",
                                    _ => "status-open"
                                };

                                <div class="issue-item">
                                    <div class="d-flex align-items-start gap-3">
                                        <div class="issue-priority @priorityClass"></div>
                                        <div class="flex-grow-1 min-w-0">
                                            <h6 class="issue-title-small">@(issue.Title ?? "Untitled Issue")</h6>
                                            <div class="d-flex align-items-center gap-2 mb-2">
                                                <span class="badge-small @statusClass">@(issue.Status == "InProgress" ? "In Progress" : issue.Status ?? "Open")</span>
                                                <span class="issue-date">@issue.CreatedAt.ToString("MMM dd")</span>
                                            </div>
                                        </div>
                                        <a asp-action="Details" asp-route-id="@issue.Id" class="btn-icon">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                                <circle cx="12" cy="12" r="3"></circle>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state-small">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                </svg>
                                <p class="text-muted mb-0">No assigned issues</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Available Issues -->
            <div class="col-lg-6">
                <div class="dashboard-section">
                    <div class="section-header">
                        <h5 class="section-title">Available Issues</h5>
                        <p class="section-subtitle">Unassigned issues you can take</p>
                    </div>
                    <div class="recent-issues">
                        @if (Model.RecentUnassignedIssues.Any())
                        {
                            @foreach (var issue in Model.RecentUnassignedIssues)
                            {
                                var priorityClass = issue.Priority?.ToLower() switch
                                {
                                    "high" => "priority-high",
                                    "medium" => "priority-medium",
                                    "low" => "priority-low",
                                    _ => "priority-medium"
                                };

                                <div class="issue-item">
                                    <div class="d-flex align-items-start gap-3">
                                        <div class="issue-priority @priorityClass"></div>
                                        <div class="flex-grow-1 min-w-0">
                                            <h6 class="issue-title-small">@(issue.Title ?? "Untitled Issue")</h6>
                                            <div class="d-flex align-items-center gap-2 mb-2">
                                                <span class="badge-small status-open">Open</span>
                                                <span class="issue-date">@issue.CreatedAt.ToString("MMM dd")</span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center gap-1">
                                            <a asp-action="Details" asp-route-id="@issue.Id" class="btn-icon">
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                                    <circle cx="12" cy="12" r="3"></circle>
                                                </svg>
                                            </a>
                                            <form asp-action="Take" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@issue.Id" />
                                                <button type="submit" class="btn-icon take" title="Take this issue">
                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state-small">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <line x1="15" y1="9" x2="9" y2="15"></line>
                                    <line x1="9" y1="9" x2="15" y2="15"></line>
                                </svg>
                                <p class="text-muted mb-0">No available issues</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row g-4 mt-3">
            <div class="col-12">
                <div class="dashboard-section">
                    <div class="section-header">
                        <h5 class="section-title">Quick Actions</h5>
                        <p class="section-subtitle">Common tasks and navigation</p>
                    </div>
                    <div class="quick-actions">
                        <a asp-action="Assigned" class="quick-action-card">
                            <div class="quick-action-icon assigned">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                </svg>
                            </div>
                            <div>
                                <h6 class="quick-action-title">My Assigned Issues</h6>
                                <p class="quick-action-desc">View and manage your assigned issues</p>
                            </div>
                        </a>
                        <a asp-action="Index" class="quick-action-card">
                            <div class="quick-action-icon all">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                    <polyline points="14,2 14,8 20,8"></polyline>
                                </svg>
                            </div>
                            <div>
                                <h6 class="quick-action-title">All Issues</h6>
                                <p class="quick-action-desc">Browse all issues and find new work</p>
                            </div>
                        </a>
                        @if (Model.OverdueIssues > 0)
                        {
                            <a asp-action="Assigned" class="quick-action-card urgent">
                                <div class="quick-action-icon urgent">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <line x1="12" y1="8" x2="12" y2="12"></line>
                                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                                    </svg>
                                </div>
                                <div>
                                    <h6 class="quick-action-title">Overdue Issues</h6>
                                    <p class="quick-action-desc">@Model.OverdueIssues @(Model.OverdueIssues == 1 ? "issue needs" : "issues need") immediate attention</p>
                                </div>
                            </a>
                        }
                        @if (Model.HighPriorityCount > 0)
                        {
                            <a asp-action="Assigned" class="quick-action-card high-priority">
                                <div class="quick-action-icon high-priority">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <path d="m9 12 2 2 4-4"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h6 class="quick-action-title">High Priority Issues</h6>
                                    <p class="quick-action-desc">@Model.HighPriorityCount high priority @(Model.HighPriorityCount == 1 ? "issue" : "issues") assigned</p>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/css/engineer-modern.css" rel="stylesheet" />
<link href="~/css/engineer-dashboard.css" rel="stylesheet" />
<link href="~/css/dashboard-charts.css" rel="stylesheet" />

@section Scripts {
    <script src="~/js/dashboard-charts.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize chart system
            const chartManager = new DashboardCharts();
            
            // Hide loading indicators initially
            function hideLoading(chartId) {
                const loading = document.getElementById(chartId + 'Loading');
                if (loading) loading.style.display = 'none';
            }
            
            // Show loading indicators
            function showLoading(chartId) {
                const loading = document.getElementById(chartId + 'Loading');
                if (loading) loading.style.display = 'flex';
            }
            
            // Show all loading indicators
            ['metrics', 'priority', 'status', 'trend', 'performance'].forEach(showLoading);
            
            // Fetch chart data and initialize charts
            fetch('@Url.Action("ChartData", "Engineer")')
                .then(response => response.json())
                .then(data => {
                    console.log('Chart data loaded:', data);
                    
                    // Create all charts
                    chartManager.createMetricsChart('metricsChart', data.metrics);
                    hideLoading('metrics');
                    
                    chartManager.createPriorityChart('priorityChart', data.priority);
                    hideLoading('priority');
                    
                    chartManager.createStatusChart('statusChart', data.status);
                    hideLoading('status');
                    
                    chartManager.createTrendChart('trendChart', data.trend);
                    hideLoading('trend');
                    
                    chartManager.createGaugeChart('performanceChart', data.performance);
                    hideLoading('performance');
                    
                    console.log('All charts initialized successfully');
                })
                .catch(error => {
                    console.error('Error loading chart data:', error);
                    // Hide loading indicators on error
                    ['metrics', 'priority', 'status', 'trend', 'performance'].forEach(hideLoading);
                });
                
            // Handle window resize for responsive charts
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(() => {
                    Object.values(chartManager.charts).forEach(chart => {
                        if (chart) chart.resize();
                    });
                }, 250);
            });
        });
    </script>
}

