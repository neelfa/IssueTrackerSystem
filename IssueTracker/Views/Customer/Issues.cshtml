@{
    ViewData["Title"] = "My Issues";
}

<div class="container-fluid">
    <div class="row" style="min-height:100vh;">
        <!-- Left sidebar -->
        <div class="col-12 col-md-3 col-lg-2 border-end bg-light">
            <div class="p-3 border-bottom d-flex align-items-center gap-2">
                <div class="d-flex align-items-center justify-content-center rounded bg-primary text-white fw-bold"
                     style="width:32px;height:32px;">
                    IT
                </div>
                <span class="fw-semibold">IssueTracker</span>
            </div>

            <div class="p-3">
                <div class="mb-3">
                    <span class="badge bg-primary-subtle text-primary">Customer</span>
                    <div class="small text-muted">demo@example.com</div>
                </div>

                <div class="fw-semibold mb-2">My Issues</div>
                <button class="btn btn-outline-primary w-100">
                    + Create Issue
                </button>
            </div>
        </div>

        <!-- Main content -->
        <div class="col-12 col-md-9 col-lg-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">My Issues</h1>
                    <div class="text-muted">View and track all your submitted issues</div>
                </div>
                <a asp-controller="Customer" asp-action="Create"
                   class="btn btn-primary">
                    + New Issue
                </a>
            </div>

            <div class="mb-3 position-relative">
                <input type="text" class="form-control ps-3" placeholder="Search issues..." />
            </div>

            <!-- Mock issues list -->
            <div class="d-flex flex-column gap-3">
                <div class="border rounded-3 p-3">
                    <div class="mb-1">
                        <span class="text-muted small me-2">ISS-001</span>
                        <span class="badge bg-warning-subtle text-warning me-2">Open</span>
                        <span class="badge bg-danger text-white">high</span>
                    </div>
                    <div class="fw-semibold">Login page not loading</div>
                    <div class="text-muted small">
                        Created 2025-01-15 • Updated 2025-01-16
                    </div>
                </div>

                <div class="border rounded-3 p-3">
                    <div class="mb-1">
                        <span class="text-muted small me-2">ISS-002</span>
                        <span class="badge bg-primary-subtle text-primary me-2">In Progress</span>
                        <span class="badge bg-secondary">medium</span>
                    </div>
                    <div class="fw-semibold">Unable to reset password</div>
                    <div class="text-muted small">
                        Created 2025-01-14 • Updated 2025-01-16
                    </div>
                </div>

                <div class="border rounded-3 p-3">
                    <div class="mb-1">
                        <span class="text-muted small me-2">ISS-003</span>
                        <span class="badge bg-success-subtle text-success me-2">Resolved</span>
                        <span class="badge bg-secondary">low</span>
                    </div>
                    <div class="fw-semibold">Email notifications not working</div>
                    <div class="text-muted small">
                        Created 2025-01-10 • Updated 2025-01-12
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center text-muted small">
                <a href="#" class="text-decoration-none">Logout</a>
            </div>
        </div>
    </div>
</div>
